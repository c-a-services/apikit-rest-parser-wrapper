#%RAML 1.0 DataType

type: object
properties:
  name:
    type: string
    description: Name of the team
  id:
    description: A three-letter code that identifies the team id
    type: string
    maxLength: 3
    minLength: 3
  homeCity:
   description: Name of the city to which this team belongs
   type: string
   required: false
  stadium:
   description: Name of the stadium
   type: string
example:
  name: "Barcelona"
  id: "BAR"
  homeCity: "Barcelona"
  stadium: "Camp Nou"    